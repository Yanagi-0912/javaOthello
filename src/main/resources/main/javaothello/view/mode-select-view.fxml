<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="main.javaothello.controller.ModeSelectController"
           stylesheets="/main/javaothello/css/styles.css"
           prefHeight="600.0" prefWidth="800.0">

    <VBox alignment="TOP_CENTER" spacing="20.0">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>

        <Text fx:id="titleText"
              text="選擇模式"
              styleClass="title-text"/>

    </VBox>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>

        <Button fx:id="singlePlayerButton"
                text="與電腦對戰"
                styleClass="select-button"
                onAction="#handleSinglePlayerButton"/>

        <Button fx:id="multiplayerButton"
                text="與玩家對戰"
                styleClass="select-button"
                onAction="#handleMultiplayerButton"/>

        <Button fx:id="backButton"
                text="返回目錄"
                styleClass="select-button"
                onAction="#handleBackButton"/>
    </VBox>

</StackPane>